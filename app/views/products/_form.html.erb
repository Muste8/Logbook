<%= form_with model: [ @customer, @customer.products.build ] do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>
    <p>
      <%= form.label :price %><br>
      <%= form.number_field :price %>
    </p>
    <p>
      <%= form.label :quantity %><br>
      <%= form.number_field :quantity %>
    </p>
    <p>
      <%= form.submit %>
    </p>
    <% end %>