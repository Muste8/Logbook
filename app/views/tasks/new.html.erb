<div class="center-wrapper">
<%= form_with(model: @task, local: true) do |form| %>
    <h1> Google Calendar </h1>
    <div class="field centered-form">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
    <div class="field centered-form">
      <%= form.label :description %>
      <%= form.text_field :description %>
    </div>
  
    <div class="field centered-form">
      <%= form.label :start_date %>
      <%= form.datetime_select :start_date %>
    </div>
  
    <div class="field centered-form">
      <%= form.label :end_date %>
      <%= form.datetime_select :end_date %>
    </div>
  
    <div class="field">
      <% form.label :event %>
      <% form.text_field :event %>
    </div>
  
    <div class="field centered-form">
      <%= form.label :members %>
      <%= form.text_field :members %>
    </div>
    <% unless current_user.provider.nil? %>
      <br>
      <div class="actions">
        <%= form.submit 'Set Reminder', class:'btn btn-success' %>
      </div>
    <% end %>
  <% end %>

<br> <%= link_to "Back", customers_path, class:"btn btn-dark" %>
</div>