<% if @customers.empty? %>
<div class="header">
  <h1>No Customers</h1>
  <p> New customers will show up here!</p>
</div>

<% else %>
<div class="header">
  <h1>All Customers</h1>
</div>

<br>
<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Full Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Total</th>
      <th>Employee Username</th>
      <th> </th>
    </tr>
  </thead>
<% end %>
  
  <tbody>
    <% @customers.each do |customer| %>
      <tr>  
        <%= render customer %>
        <td>
        <%= link_to "Delete", customer_path(customer), data: {
          turbo_method: :delete, turbo_confirm: "Are you sure?" }, class:'btn btn-outline-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
      
    </tbody>
</table>

<%= link_to "New Customer", new_customer_path, class:"btn btn-secondary" %>