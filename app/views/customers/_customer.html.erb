<div id="<%= dom_id customer %>">

  <td>
    <%= customer.first_name %>
  </td>

  <td>
    <%= customer.last_name %>
  </td>

  <td>
    <%= customer.phone %>
  </td>

  <td>
    <a>$</a><%= customer.products.sum(:total) %>
  </td>

  <td>
    <% user = Customer.joins(:user).where(user: { id: customer.user.id }).pluck(:username).first %>
    <%= user.capitalize %>
  </td>
    
</div>